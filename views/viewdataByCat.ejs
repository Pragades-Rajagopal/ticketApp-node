<%- include('header') %>

<br>
<div class="container">
    <div class="table-responsive-sm">
        <h3 class="heading">TICKET DETAILS BY CATEGORY FOR <%= MON %></h3>
        <br>
        <table class="table table-hover table-cat">
            <thead>
                <tr style="background-color: #968bdf;">
                    <th>Resolution</th>
                    <th>Ticket Count</th>
                    <th>Ticket Type</th>
                </tr>
            </thead>
            <tbody>
                <% for (const val of result) { %>
                    <tr>
                        <td><%= val.RESOLUTION %></td>
                        <td><%= val.TICKET_COUNT %></td>
                        <td><%= val.TICKET_TYPE %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <br>
        <button class="btn btn-outline-dark cancel" onclick="history.back()">Back</button>
        <a accesskey="0" class="btn btn-outline-dark cancel" href="/ticket-tool">Home</a>
    </div>
</div>

<%- include('footer') %>
