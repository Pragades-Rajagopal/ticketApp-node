<%- include('header') %>
<br>
<div class="container">
    <h3 class="heading">TICKET TRACKING APPLICATION</h3>
    <form action="/ticket-tool" method="post">
        <div class="mb-3">
            <% if (errors.Ticket) { %>
                <div class="text-danger mb-3"><%= errors.Ticket.msg %></div>
            <% } %>
            <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputTicket" placeholder="Enter the ticket number *" *" onkeypress="return event.charCode >= 48 && event.charCode <= 57" name="Ticket">
            <% if (errors.DESCR) { %>
                <div class="text-danger mb-3"><%= errors.DESCR.msg %></div>
            <% } %>
            <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputDescr" placeholder="Enter the ticket description *" name="DESCR" list="resol">
            <datalist id="resol">
                <% resolution.forEach((resolution, index)=>{%>
                    <option id=<%= resolution.CATEGORY%>>
                        <%= resolution.CATEGORY %></option>
                    <%})%>
            </datalist>
            <% if (errors.CATEGORY) { %>
                <div class="text-danger mb-3"><%= errors.CATEGORY.msg %></div>
            <% } %>
            <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputCategory" placeholder="Enter the ticket category *" name="CATEGORY" list="category">
            <datalist id="category">
                <option value="Incident">
                <option value="Service Request">
            </datalist>
            <% if (errors.COMMENT) { %>
                <div class="text-danger mb-3"><%= errors.COMMENT.msg %></div>
            <% } %>
            <textarea autofocus class="form-control shadow-none mb-3 phText" id="inputComment" name="COMMENT" placeholder="Enter the detailed description *"></textarea>
            <% if (errors.USER) { %>
                <div class="text-danger mb-3"><%= errors.USER.msg %></div>
            <% } %>
            <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputUser" placeholder="Select user *" name="USER" list="user">
            <datalist id="user">
                <% users_.forEach((users_)=>{%>
                    <option id=<%= users_.user%>>
                        <%= users_.user %></option>
                    <%})%>
            </datalist>
            <% if (errors.APP) { %>
                <div class="text-danger mb-3"><%= errors.APP.msg %></div>
            <% } %>
            <input autofocus type="text" class="form-control shadow-none mb-3 phText" id="inputApp" placeholder="Select application *" name="APP" list="app">
            <datalist id="app">
                <% app_nm.forEach((app_nm)=>{%>
                    <option id=<%= users_.user%>>
                        <%= app_nm.name %></option>
                    <%})%>
            </datalist>
        </div>
        <button type="submit" class="btn btn-primary">SUBMIT</button>
    </form>
</div>

<%- include('footer') %>

